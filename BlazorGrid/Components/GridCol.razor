@typeparam T
@implements IGridCol<T>
@if (Parent == null)
{
    <div @attributes="FinalAttributes">
        @if (ChildContent == null)
        {
            @GetAutoValue()
        }
        else
        {
            @ChildContent
        }
    </div>
}
else
{
    <div @onclick="_ => Parent.TryApplySorting(For)" class="@CssClass">
        @if (!AlignRight)
        {
            @Caption
        }
        @if (IsFiltered)
        {
            <span class="blazor-grid-filter-icon @(IsFiltered ? "text-secondary" : "text-gray")">
                *
            </span>
        }
        else
        {
            <span class="blazor-grid-sort-icon">
                @if (IsSorted)
                {
                    if (Parent.OrderByDescending)
                    {
                        @:&rsaquo;
                    }
                    else
                    {
                        @:&lsaquo;
                    }
                }
                else
                {
                    @:&lsaquo;&rsaquo;
                }
            </span>
        }
        @if (AlignRight)
        {
            @Caption
        }
    </div>
}