@implements IGridCol
@if(Parent == null)
{
    <div class="@CssClass">@ChildContent</div>
}
else
{
    <div @onclick="_ => Parent.TryApplySorting(OrderBy)" class="@CssClass @(IsSortable == null ? " " : " sortable") @(IsSorted ? "sorted" : "" )">
        @if (!AlignRight) {
            @Caption
        }
        @if(IsSortable != null) {
            <i class="fa fa-sort-alpha-@(Parent.OrderByDescending ? "desc" : "asc") @(AlignRight ? "mr-2" : "ml-2") sorted-indicator @(IsSorted ? "" : "invisible")"></i>
        }
        @if (AlignRight) {
            @Caption
        }
    </div>
}