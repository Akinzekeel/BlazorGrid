@page "/fetchdata"
@inject HttpClient Http

<h1>Exchange rates</h1>

<p>This component demonstrates fetching data from the server.</p>

<BlazorGrid TRow="ExchangeRate" SourceUrl="https://api.exchangeratesapi.io/latest">
    <GridCol Caption="Currency" TRow="ExchangeRate">
        @context.Id
    </GridCol>
    <GridCol Caption="Rate" TRow="ExchangeRate">
        @context.Rate
    </GridCol>
</BlazorGrid>