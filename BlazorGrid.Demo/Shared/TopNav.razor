<header class="navbar navbar-expand navbar-dark bg-primary sticky-top shadow">
    <div class="@ContainerClass">
        <div class="nav navbar-nav">
            <a role="button" class="nav-link d-md-none" @onclick="() => Sidebar.Toggle()">
                <i class="fa fa-bars fa-fw" aria-label="Menu"></i>
            </a>
            <NavLink href="/" class="nav-link mr-2"><b>BlazorGrid</b></NavLink>
            <div class="d-none d-md-inline-flex">
                @CollapsedItems
            </div>
        </div>
        <div class="nav navbar-nav ml-auto">
            <a target="_blank" href="https://github.com/Akinzekeel/BlazorGrid" class="btn btn-dark ml-auto">
                <i class="fa fa-github mr-1"></i>
                <span>GitHub</span>
            </a>
        </div>
    </div>
</header>
<SidebarMenu @ref="Sidebar">
    <nav class="menu">
        @CollapsedItems
    </nav>
    @if(SidebarSubmenu != null)
    {
        <hr />
        @SidebarSubmenu
    }
</SidebarMenu>
@code
{
    [Parameter] public bool FullWidth { get; set; } = false;
    [Parameter] public RenderFragment SidebarSubmenu { get; set; }

    private string ContainerClass => FullWidth ? "container-fluid" : "container";
    private SidebarMenu Sidebar;

    private RenderFragment CollapsedItems => __builder =>
    {
    <NavLink href="/getting-started"
             class="nav-link">Getting started</NavLink>
    <NavLink href="/examples"
             class="nav-link" Match="NavLinkMatch.Prefix">Examples</NavLink>
    <NavLink href="/docs"
             class="nav-link">Documentation</NavLink>
    };
}